{{>estiloLogin}}
{{#if falha}}
<main>
  {{!-- Criação de modal que é ativado quando o usuário é inválido --}}
  <div class="modal fade " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Acesso Negado!</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <small>Usuário e/ou senha Inválidos</small>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
  {{/if}}

{{!-- Área de login --}}
  <section class="login">
    <form action="/addLogin" method="post">
      <div class="d-flex"><img src="img/myDoc.png"></div>
      <h2 class="text-success text-center"><b>Login</b></h2>
      <div class="row">
        <div class="col">
          <div class="input-group mt-3">
            <span class="input-group-text border-success border-end-0 bg-light"><i
                class="bi bi-person-circle"></i></span>
            <input type="text" class="form-control border-success border-start-0" name="loginUsuario" id="loginUsuario"
              placeholder="Digite um nome de login" required />
          </div>
          <div class="input-group mt-3">
            <span class="input-group-text border-success border-end-0 bg-light"><i class="bi bi-key-fill"></i></span>
            <input type="password" class="form-control border-success border-start-0" name="senha" id="senha"
              placeholder="Digite sua senha" required />
          </div>
          <div class="mt-3 text-center">
            <button type="submit" class="btn btn-success border-success border-start-0">Entrar</button>
          </div>
        </div>
      </div>
    </form>
  </section>
</main>